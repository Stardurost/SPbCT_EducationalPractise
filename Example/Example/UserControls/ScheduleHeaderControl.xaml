<UserControl x:Class="Example.UserControls.ScheduleHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Example.UserControls"
             mc:Ignorable="d" DataContextChanged="StackPanel_DataContextChanged"
            >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" DataContextChanged="StackPanel_DataContextChanged">
        <TextBlock x:Name="BlockDay" Style="{StaticResource BlockHeaderDay}" Text=" "></TextBlock>
        <TextBlock x:Name="BlockDate" Style="{StaticResource BlockCommon}" Width="auto" TextAlignment="Center" Text=" "></TextBlock>
    </StackPanel>
</UserControl>
